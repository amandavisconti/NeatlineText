[data-neatline-slug]
  background lighten(black, 90%)
  cursor pointer
  padding 0 5px

  &.highlighted
    background lighten(yellow, 50%)

  &.selected
    background #0080bb
    color white

// Styles for layout for show action

body.neatline.show
  background darken(white, 0.5%)

  div#neatline-map
    float left
    width 65%

    #neatline, #neatline-map
      height 100%
      width 100%

  div#neatline-narrative
    float right
    height 800px
    overflow-y scroll
    padding 2em 3em
    width 35%

    a.back
      display inline-block
      font-family $font-body
      padding 5px 8px
      margin-bottom 1em

      .arrow
        font-size 13px

// Styles for layout for fullscreen action

body.neatline.fullscreen
  background darken(white, 0.5%)

  div#neatline-map
    float left
    width 65%

    #neatline, #neatline-map
      height 100%
      width 100%

  div#neatline-narrative
    float right
    padding 2em 3em
    width 35%

    a.back
      display inline-block
      font-family $font-body
      padding 5px 8px
      margin-bottom 1em

